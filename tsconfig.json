{
  "compilerOptions": {
    "rootDir": "lib",
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "es2016", "es2017"],
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "strictBindCallApply": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist"]
}
