{
  "name": "@gisce/powerp.js",
  "version": "2.1.0-alpha.2",
  "description": "PowERP Javascript Client",
  "module": "./dist/powerpjs.es.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": "20.5.0"
  },
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/powerpjs.es.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build:tsc": "tsc --noEmit",
    "build:vite": "vite build",
    "build": "concurrently npm:build:*",
    "check": "lint-staged",
    "dev:tsc": "tsc --noEmit --watch",
    "dev:vite": "vite build --watch --force",
    "start": "concurrently npm:dev:*",
    "prepare": "husky install",
    "test:watch": "vitest --watch",
    "test": "vitest run",
    "analyze": "vite-bundle-visualizer"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gisce/powerp.js.git"
  },
  "keywords": [
    "PowERP",
    "javascript",
    "api"
  ],
  "author": "GISCE-TI, S.L.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gisce/powerp.js/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/gisce/powerp.js#readme",
  "peerDependencies": {
    "axios": "^0.27.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@gisce/commitlint-rules": "1.0.5",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "10.0.4",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "concurrently": "8.2.0",
    "dotenv": "^8.2.0",
    "eslint": "8.51.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard-with-typescript": "24.0.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-n": "15.6.0",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "3.0.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "semantic-release": "21.0.7",
    "typescript": "5.3.3",
    "vite": "4.5.1",
    "vite-bundle-visualizer": "^0.10.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "lib/**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "lib/**/*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  },
  "release": {
    "branches": [
      "v2",
      {
        "name": "v2-develop",
        "prerelease": "rc"
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "npm run build"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
